let Person = {
  local name;
  local age;
  local gender;
  constructor = (name, age, gender, ...) {
    this.name = name;
    this.age = age;
    this.gender = gender;
  };
  sayHello = -> print "Hello, I am " this.name;
};

let kevin = new Person("Kevin", 3, "male");
kevin.sayHello();

let f = async (name) {
  print "Hello" name "\n";
  print "Could you tell me your age?\n";
  let age = yield();
  print "Oh! you are" age "now!";
};

let a = async f;

f("Kevin");
f(3);
