import "language/c.klr";

decl t: num, if, then, '{', '}', else, '$';
decl n: expr, stmts, stmt, stmt_if, then_blk, else_blk;

stmt : stmt_if;

stmts : stmts stmt | stmt;

stmt_if : if expr then_blk else_blk;

then_blk : then stmt | then '{' stmts '}';

else_blk : else stmt | else '{' stmts '}' | ;

expr : num;

set con shifting, log : "ifthen.log";
set start stmts;
set end '$';
set alg lr1;
